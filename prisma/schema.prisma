generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int    @id @default(autoincrement())
  nome         String
  nome_usuario String @unique
  senha        String
}

model Produto {
  id         Int    @id @default(autoincrement())
  nome       String @unique
  quantidade Int
  valor      Float
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nome     String
  telefone String
  cidade   String
  cpf      String @unique
}

model Venda {
  id            Int      @id @default(autoincrement())
  idCliente     Int
  idProduto     Int
  data          DateTime @default(now())
  quantidade    Int
  valorProduto  Float
  valorTotal    Float
  valorDesconto Float
  valorLiquido  Float
}
